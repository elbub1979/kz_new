<!DOCTYPE html>
<html>
<head>
  <title>KzNew</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>

<nav class="navbar navbar-expand-lg bg-light sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><%= t('.main') %></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <%= link_to t('.phonebook'), phonebooks_path, class: "nav-link active" %>

        <% if user_signed_in? %>
          <%= link_to t('.data_carrier'), dsp_data_carriers_path, class: "nav-link" %>
        <% end %>

        <a class="nav-link disabled">Disabled</a>
      </div>
    </div>
  </div>

  <% if user_signed_in? %>
    <%= link_to "#{current_user.name}", current_user, class: 'nav-link' %>
    <%= link_to 'Выйти', destroy_user_session_path, data: { turbo_method: "delete" }, class: 'nav-link' %>
  <% else %>
    <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %>
    <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'nav-link' %>
  <% end %>

  <% if user_signed_in? %>
    <%= button_to "Заполнить", fill_in_phonebooks_path, method: :get, class: 'btn btn-light' %>
  <% end %>

</nav>
<div class="container">
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <%= yield %>
</div>
<footer class="footer fixed-bottom">
  <span class="text-muted">Сайт разработал Илья Леушкин ака elbub</span>
</footer>
</body>
</html>
